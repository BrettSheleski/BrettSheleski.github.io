{
  "name": "brett.sheleski.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all docs-serve watch",
    "css-copy": "cross-env-shell shx mkdir -p site/docs/$npm_package_version_short/dist/ && cross-env-shell shx cp -r dist/css/ site/docs/$npm_package_version_short/dist/",
    "css-lint": "npm-run-all --parallel css-lint-*",
    "css-pages": "npm-run-all css-pages-lint css-pages-compile css-pages-minify css-copy",
    "css-pages-lint": "stylelint \"site/styles/pages/**/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "css-pages-compile": "node-sass --output-style expanded site/styles/pages --output site/styles/pages",
    "css-pages-minify": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output site/styles/pages site/styles/pages",
    "docs-serve": "bundle exec jekyll serve",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-pages": "nodemon --watch site/styles/pages --ext scss --exec \"npm run css-pages\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrettSheleski/BrettSheleski.github.io.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BrettSheleski/BrettSheleski.github.io/issues"
  },
  "homepage": "https://brett.sheleski.com",
  "dependencies": {
    "bundler": "^0.8.0",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.10.0"
  }
}
